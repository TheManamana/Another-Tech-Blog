<div class="blog-post">
  <div class="container border rounded m-3 bg-secondary">
    <div class="border-bottom">
      <h2>{{blog.title}}</h2>
      <h3>Author: {{blog.user.name}}</h3>
    </div>
    <div class="border-bottom">
      <p class="post-content">{{blog.body}}</p>
    </div>
    
    {{#each blog.comments as |comment|}}
      <div class="container border rounded m-1 bg-light">
        <p>{{comment.user.name}}</p>
        <p>{{comment.comment}}</p>
        
      </div>
    {{/each}}
</div>
<div>
  <h3>Add a comment</h3>
  <form class="newComment-form" id="comment-text">
    <div class="form-group">      
      <input type="text" class="form-control" id="post-comment" />
    </div>
    <button type="submit" class="btn btn-primary sub-btn" data-id="{{blog.id}}">Submit</button>
  </form>
</div>

<script src="/js/blog.js"></script>